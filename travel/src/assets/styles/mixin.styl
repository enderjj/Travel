ellipsis()
  overflow: hidden
  white-space: nowrap
  text-overflow: ellipsis

// 定义移动设备上 1 像素的显示 通过伪类实现
after-border-1px()
  position: relative
  &::after
    display: block
    position: absolute
    left: 0
    bottom: 0
    content: ' '
    width: 100%
    border-top: 1px solid #eee

before-border-1px()
  position: relative
  &:before
    display: block
    position: absolute
    left: 0
    top: 0
    content: ' '
    width: 100%
    border-bottom: 1px solid #eee
